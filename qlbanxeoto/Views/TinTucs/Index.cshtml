@model IEnumerable<qlbanxeoto.Models.TinTuc>

@{
    ViewBag.Title = "Danh sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center btn-info" style="padding:10px">Danh sách</h2>

<p class="pull-left">
    @Html.ActionLink("Tạo mới", "Create", "TinTucs", new { @class = "btn btn-primary" })
    @Html.ActionLink("Tin tức đã xóa", "Deleted", "TinTucs", new { @class = "btn btn-success" })
</p>
<table class="table table-hover table-responsive">
    <tr class="active">
        <th width="100">
            @Html.DisplayNameFor(model => model.TieuDe)
        </th>
        <th width="450">
            @Html.DisplayNameFor(model => model.NoiDung)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThoiGianDang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LoaiTinTuc.TenLoaiTinTuc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NhanVien.HoTen)
        </th>
        <th>Chức năng</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TieuDe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoiDung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThoiGianDang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiTinTuc.TenLoaiTinTuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhanVien.HoTen)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.TinTucId }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Chi tiết", "Details", new { id = item.TinTucId }, new { @class = "btn btn-success" })
                @Html.ActionLink("Xóa", "Delete", new { id = item.TinTucId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
